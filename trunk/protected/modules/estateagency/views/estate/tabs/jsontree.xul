<script>
//<![CDATA[
function SearchKeyword(oElem)
{
  var filter = oElem.value;
  
  if(filter == ''){
    fill_mytree(ESTATES.data);
    return;
  }
  
  var data = [];
  
  var regexp = new RegExp(filter, "i"); // case insensitive
  
  for(i in ESTATES.data){
    var model = ESTATES.data[i];
    
    var match = false;
    for(e in model){
        var attr = model[e];                        
        if(false != regexp.test(attr)){            
            match = true;
            break;
        } 
    }
    if(match){
        data.push(model);
        continue;
    }
  }
  
  fill_mytree(data);
}
//]]>
</script>
